<div class="container">
  <div class="row">
    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, size:"63x63", format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>

  <div class="row">
    <div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
           <label for="body">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
  </div>
</div>