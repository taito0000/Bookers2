<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'books/side', locals: { book: @book_new, user: @user } %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                  <br><%= @book.user.name %>
                <% end %>
              </td>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book) %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>